{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
  "rushVersion": "5.105.0",
  "pnpmVersion": "8.7.5",
  "nodeSupportedVersionRange": "18.17.0",
  "projectFolderMinDepth": 2,
  "projectFolderMaxDepth": 2,
  "ensureConsistentVersions": true,
  "approvedPackagesPolicy": {
    "reviewCategories": [
      "rush-plugins",
      "heft-plugins",
      "libraries",
      "internal"
    ],
    "ignoredNpmScopes": ["@types"]
  },
  "repository": {
    "url": "https://github.com/MsBeiBei/Foxnorn.git",
    "defaultBranch": "main",
    "defaultRemote": "origin"
  },
  "projects": [
    {
      "packageName": "@foxnorn/rush-filter-plugin",
      "projectFolder": "rush-plugins/rush-filter-plugin",
      "reviewCategory": "rush-plugins",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/rush-sortpack-plugin",
      "projectFolder": "rush-plugins/rush-sortpack-plugin",
      "reviewCategory": "rush-plugins",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/heft-storybook-plugin",
      "projectFolder": "heft-plugins/heft-storybook-plugin",
      "reviewCategory": "heft-plugins",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/heft-typescript-plugin",
      "projectFolder": "heft-plugins/heft-typescript-plugin",
      "reviewCategory": "heft-plugins",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/heft-vite-plugin",
      "projectFolder": "heft-plugins/heft-vite-plugin",
      "reviewCategory": "heft-plugins",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/heft-checkup-plugin",
      "projectFolder": "heft-plugins/heft-checkup-plugin",
      "reviewCategory": "heft-plugins",
      "shouldPublish": true,
      "cyclicDependencyProjects": ["@foxnorn/heft-node-rig"]
    },
    {
      "packageName": "@foxnorn/heft-node-rig",
      "projectFolder": "rigs/heft-node-rig",
      "reviewCategory": "libraries",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/heft-web-rig",
      "projectFolder": "rigs/heft-web-rig",
      "reviewCategory": "libraries",
      "shouldPublish": true
    },
    {
      "packageName": "@foxnorn/tsconfig",
      "projectFolder": "internal/tsconfig",
      "reviewCategory": "internal",
      "shouldPublish": true
    }
  ]
}
